<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <div class="edit-user-form">
        <h2>Tu solicitud de reserva está casi completada</h2>
        <p>Solo necesitamos algunos datos más:</p>

        <%= simple_form_for([@user]) do |f| %>
         <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :first_name, label:"Tu nombre", required: true, autofocus: true %>
            <%= f.input :last_name, label:"Tu apellido", required: true %>
            <%= f.input :telefono,
              hint: "Celular o fijo",
              label:"Un número de contacto",
              required: true
            %>
            <%= f.input :identificacion,
              hint: "No debe contener especiales (como espacios, *, -)",
              label:"Y tu cédula o Id",
              required: true
            %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Completar solicitud", class: "btn btn-primary"%>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</div>
