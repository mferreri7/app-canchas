<div class="row">
    <%= form_tag fields_path, method: :get, class: "field-search-form" do %>

    <div class="col-xs-12 col-sm-8">
      <%= text_field_tag :query,
        params[:query],
        class: "queryinput",
        placeholder: "¿Donde quieres jugar?"
      %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <select name="capacity_limit" id="capacity_limit" class="queryinput">
        <option value="" <%= "selected" unless params[:capacity_limit].present? %> disabled hidden>¿Cuántos juegan?</option>
        <% Field::CAPACITY_RANGE.each do |value| %>
          <option <%= "selected" if value.to_s == params[:capacity_limit] %> value="<%= value %>"><%= value / 2 %> Vs. <%= value / 2 %></option>
        <% end %>
      </select>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= text_field_tag :dates,
        params[:dates],
        class: "datepicker datesize",
        placeholder: "Canchas disponibles entre"
      %>
    </div>
    <div class="col-xs-6 col-sm-2">
      <select name="start_time" class="datesize" id="starttime">
        <option value="" <%= "selected" unless params[:start_time].present? %> disabled hidden>Entre 5PM</option>
        <% (1..23).each do |value| %>
          <option <%= "selected" if value.to_s == params[:start_time] %> value="<%= value %>"><%=format_hour(value)%></option>
        <% end %>
      </select>
    </div>
    <div class="col-xs-6 col-sm-2">
      <select name="end_time" class="datesize" id="endtime">
        <option value="" <%= "selected" unless params[:end_time].present? %> disabled hidden>Y 8PM</option>
        <% (1..23).each do |value| %>
          <option <%= "selected" if value.to_s == params[:end_time] %> value="<%= value %>"><%=format_hour(value)%></option>
        <% end %>
      </select>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary full-width-padded" %>
    </div>
  <% end %>
</div>

