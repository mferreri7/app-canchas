<%= form_with url: fields_path, id: "dates-form", method: :get, class: "field-search-form", local: true do |f| %>
    <%= f.hidden_field :query,
      value: params[:query],
      id: "query"
    %>
    <%= f.text_field :dates,
      value: params[:dates],
      id: "dates",
      class: "datepicker",
      placeholder: "Fecha"
    %>
    <%= f.hidden_field :capacity_limit,
      value: params[:capacity_limit]
    %>
    <%= f.hidden_field :start_time,
      value: params[:start_time]
    %>
    <%= f.hidden_field :end_time,
      value: params[:end_time]
    %>
<% end %>
