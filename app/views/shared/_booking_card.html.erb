<div class="card">
  <div
    class="card-top"
    style="background-image:
      linear-gradient(rgba(255,255,255, 0),
      rgba(0, 0, 0, 0.4)),
      url(<%= field_picture_or_generic(booking.field)%>);"
  >
     <%= business_logo_or_generic(booking.field.business, "card-top-business-logo")%>
  </div>
  <div class="card-bottom">
    <div class="card-header">
      <h3 class="card-business-name"><%= booking.field.business.name%></h3>
      <p class="card-addreess"><%= booking.field.business.address %></p>
      <h5 class="card-booking-date"><%= l(booking.date.to_date, format: '%A %d de %B') %></h5>
    <hr>
    </div>
    <div class="card-field-info">
      <div class="card-field-descripton">
        <p class="card-field-name">
          <i class="fas fa-futbol"></i>
          <%= booking.field.name %>
        </p>
        <div class="card-field-capacity">
          <i class="fas fa-users"></i>
          <p><%= booking.field.capacity %> jugadores (<%= booking.field.capacity / 2 %> vs. <%= booking.field.capacity / 2 %>)</p>
        </div>
      </div>
      <div class="card-field-descripton">
        <p class="card-price">
          <i class="fas fa-dollar-sign"></i>
          <%= humanized_money(booking.field.price) %> / Hora
        </p>
        <div class="card-field-capacity">
          <i class="far fa-clock"> </i>
          <p><%= "#{format_hour(booking.date.hour)} - #{format_hour(booking.date.hour + 1)}" %></p>
        </div>
      </div>
    </div>
    <div class="booking-code">
      <p>
        <i class="fas fa-qrcode"></i>
        CÃ³digo de la reserva:
        <%= booking.id %>
      </p>
    </div>
  </div>
<% if booking.status == "Pendiente" || booking.status.nil? %>
  <div class="booking-status pending-booking">
<% elsif booking.status == "No confirmada" || booking.status == "Jugado" %>
  <div class="booking-status passed-booking">
<% elsif booking.status == "Confirmada" %>
  <div class="booking-status aproved-booking">
<% elsif booking.status == "Cancelada" %>
  <div class="booking-status canceled-booking">
<% end %>
    <%= booking.status %>
  </div>
</div>

