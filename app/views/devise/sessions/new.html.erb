<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <h2>Inicio de sesión</h2>

        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Inicia sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-facebook" %><br />
        <% end -%>

      <p>o con tu correo electrónico:</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "Correo electrónico", required: false, autofocus: true %>
        <%= f.input :password, label: "Contraseña", required: false %>
        <%= f.input :remember_me,  label: "Recordarme", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inicia sesión" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
