<%= link_to root_path do %>
  <%= image_tag "logo.png", class: "sessions-logo"%>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="user_form_options_container">
        <h2 class="user_form_text_center"> Editar perfil </h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name, label:"Nombre", autofocus: true %>
          <%= f.input :last_name, label:"Apellido" %>
          <%= f.input :telefono,
            hint: "Celular o fijo",
            label:"Número de contacto"
          %>
          <%= f.input :identificacion,
            hint: "No debe contener especiales (como espacios, *, -)",
            label:"Cédula o Id"
          %>

          <%= f.input :password, autocomplete: "off", hint: "Déjalo en blanco si no la quieres cambiar", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <hr class="line-thru">
          <strong class="user_form_text_center or_align"></strong>
          <%= f.input :current_password, hint: "Necesitamos tu contraseña actual para confirmar los cambios", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "GUARDAR", class: "btn btn-login" %>
        </div>
        <% end %>

        <h3 class="user_form_text_center"> <%= t('forms.account_cancel') %> </h3>
        <div class="login-links">
          <p><%= t('forms.unhappy?') %> <%= link_to t('forms.cancel_my_account'), registration_path(resource_name), data: { confirm: t('forms.are_you_sure?') }, method: :delete %></p>

          <%= link_to t("forms.back"), :back %>
        </div>

      </div>

    </div>
  </div>
</div>
