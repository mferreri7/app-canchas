<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Crea una cuenta</h2>

        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Crea una cuenta con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-primary" %><br />
        <% end -%>
      <span></span>

      <p>o con tu correo electrónico:</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Correo electrónico", required: true, autofocus: true %>
          <%= f.input :password, label: "Contraseña",required: true, hint: ("#{@minimum_password_length} caracteres como mínimo" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirma la contraseña", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Regístrate" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>








