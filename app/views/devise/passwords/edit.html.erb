<div class="edit-user-form-wrapper" style="background-image:
      linear-gradient(rgba(255,255,255, 0),
      rgba(0, 0, 0, 0.4)),
      url(<%= cl_image_path('Default Pics/user-info-background.jpg')%>);"
  >
  <div class="logo-sessions-position">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "sessions-logo logo-sessions-move-rigth"%>
    <% end %>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-5 col-sm-offset-3">
        <div class="user_form_options_container">
          <h2 class="user_form_text_center">Cambia tu contraseña</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password, label: "Nueva contraseña", required: true, autofocus: true, hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirma la contraseña", required: true %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Cambiar mi contraseña", class: "btn btn-login" %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
