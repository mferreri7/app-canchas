<div class="container text-center">
  <div class="row">
    <%= form_tag fields_path, method: :get do %>
      <div class="col-xs-12">
        <%= text_field_tag :dates,
          params[:dates],
          class: "datepicker",
          placeholder: "Fechas en las que deseas buscar"
        %>
      </div>
      <div class="col-xs-12">
        <%= text_field_tag :time,
          params[:time],
          class: "timepicker",
          placeholder: "Tu horario favorito"
        %>
      </div>

      <div class="col-xs-12">
        <%= submit_tag "Buscar Mi Cancha"%>
      </div>
    <% end %>
  </div>
</div>
